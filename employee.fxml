<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="688.0" prefWidth="515.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab3.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="iid" />
    <TextField fx:id="iname" />
    <TextField fx:id="iAddress" />
    <TextField fx:id="iSalary" />
    <Button mnemonicParsing="false" onAction="#InsertData" text="Insert" />
    <Button mnemonicParsing="false" onAction="#UpdateData" text="Update" />
    <Button mnemonicParsing="false" onAction="#DeleteData" text="Delete" />
    <Button mnemonicParsing="false" onAction="#loadData" text="Load" />
    <Button onAction="#onHelloButtonClick" text="Fetch" />
    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="75.0" text="id" />
            <TableColumn fx:id="name" prefWidth="75.0" text="name" />
            <TableColumn fx:id="Address" prefWidth="75.0" text="Address" />
            <TableColumn fx:id="Salary" prefWidth="75.0" text="Salary" />
        </columns>
    </TableView>

</VBox>
